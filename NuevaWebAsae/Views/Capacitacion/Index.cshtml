                    <div class="col-md-4 wow fadeInUp" style="visibility: visible; animation-name: fadeInUp;">
                        <div class="about-col">
                            <a href="@Url.Action("Empresarial", "Capacitacion")">
                                <div class="img">
                                    <img src="~/images/Capacitacion/capacitacion2016_principal.jpg" width="100%">
