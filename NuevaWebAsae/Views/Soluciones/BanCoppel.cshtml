
@{
    ViewBag.Title = "BanCoppel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #hero-area {
        background: url('../../images/xpinnit/Cambia-de-aire.jpg') no-repeat 50%;
        background-size: cover;
        background-attachment: fixed;
        padding: 230px 0;
        color: #fff;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.3);
        position: relative;
    }

        #hero-area:before {
            content: '';
            z-index: 9;
            background-image: linear-gradient(114deg, #05215682 11%,#929600a6 94%);
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }

    .cd-headline.slide .cd-words-wrapper {
        color: #fff;
    }

    #call-to-action {
        background-image: linear-gradient( 114deg, #0c4b8d 30%, #0c4b8d 99%);
        background-size: cover;
        background-attachment: fixed;
        padding: 80px 0;
        text-align: center;
        position: relative;
        color: #fff;
    }

        #call-to-action .block .btn-contact {
            background: #fff;
            border: none;
            color: #3f51b5;
            padding: 16px 35px;
            margin-top: 20px;
            font-size: 12px;
            letter-spacing: 2px;
            text-transform: uppercase;
            border-radius: 0;
        }
</style>

<!--
==================================================
