<section id="hero-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="block wow fadeInUp" data-wow-delay=".3s">
                    <!-- Slider -->
                    <section class="cd-intro">
                        <h1 class="wow fadeInUp animated cd-headline slide" data-wow-delay=".4s">
                            <span style="color:#fff"> Estados de cuenta bancoppel</span><br><br>
                            <img src="~/images/BanCoppel/LogoCopel.png" width="40%" />
                            <br />
                            <br />
                            <span class="cd-words-wrapper">
                                <b class="is-visible">Disponibilidad</b>
                                <b>Accesibilidad</b>
                                <b>Seguridad</b>
                                <b>Compatibilidad</b>
                                <b>Configuración de envíos</b>
                            </span>
                        </h1>
                    </section> <!-- cd-intro -->
                    <!-- /.slider -->
                    @*<h2 class="wow fadeInUp animated" data-wow-delay=".6s" style="color:#fff">
                            Asae Tu mejor Aliado en soluciones de Tecnología.
                        </h2>*@
                </div>
            </div>
        </div>
    </div>
</section><!--/#main-slider-->
