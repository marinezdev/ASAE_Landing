                    if ($("#Select_Delegacion_Municipio option:selected").val() > 0) {
                        if ($("#Select_Colonia option:selected").val() > 0) {
                            direccion = true;
                        } else {
                            Mensaje('Selecciona la colonia.');
                        }
                    } else {
                        Mensaje('Selecciona la delegación o municipio.');
                    }
                } else {
                    Mensaje('Selecciona el estado.');
                }
            } else {
                Mensaje('Código postal.');
            }

        }


        if ($('#Text_Titulo').val().length > 0) {
            if ($("#Select_Categoria option:selected").val() > 0) {
                if ($("#Select_TipoVacante option:selected").val() > 0) {
