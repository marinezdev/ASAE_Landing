<script>
    $(document).ready(function () {
        $('.input-number').on('input', function () {
            this.value = this.value.replace(/[^0-9]/g, '');
        });

        $('#BtnRegistrar').click(function () {
            if (ValidarForm()) {
                var obj = {};
                var direccion = "";

                obj['Titulo'] = $('#Text_Titulo').val();
                obj['IdCategoria'] = $("#Select_Categoria option:selected").val();
                obj['IdTipoVacante'] = $("#Select_TipoVacante option:selected").val();
                obj['Sueldo'] = $('#Text_Sueldo').val();
                

                if ($('#Text_SueldoF').val().length > 0) {
                    obj['SueldoF'] = $('#Text_SueldoF').val();
                } else {
                    obj['SueldoF'] = 0;
                }

                obj['IdPago'] = $("#Select_Pago option:selected").val();
                obj['Contenido'] = $('textarea#edit').val();

                if (!$('#BuscarDireccion').prop('checked')) {
                    obj['Direccion'] = $('#Text_Direccion').val();
                    obj['DireccionActivo'] = 0;
                   
                    obj['CP'] = " ";
                    obj['IdEstado'] = 0;
                    obj['IdPoblacion'] = 0;
                    obj['IdColonia'] = 0;

                } else {
                    obj['Direccion'] = " ";
                    obj['DireccionActivo'] = 1;
                    obj['CP'] = $('#CP').val();
                    obj['IdEstado'] = $("#Select_DEstado option:selected").val();
                    obj['IdPoblacion'] = $("#Select_Delegacion_Municipio option:selected").val();
                    obj['IdColonia'] = $("#Select_Colonia option:selected").val();
                }

                var jsonObject = {
                    "Vacante": obj
                };


                $.ajax({
                    type: "POST",
                    url: "@Url.Action("NuevaVacante", "Adm")",
                    data: JSON.stringify(jsonObject),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: Resultado,
                    error: Error
                });

            }

        });
    });

    function Resultado(result) {

        if (result.Resultado > 0) {
            swal({
                title: "Registro. !",
                text: "Vacante registrada",
                icon: "success",
                button: "Aceptar",
            })
            .then((value) => {
                window.location.href = '@Url.Action("work", "Adm")';
            });
        } else {
            Mensaje(result.ResultadoText);
        }
    }

    function Error(result) {
        Mensaje("Problemas en la ejecución, intento mas tarde!");
    }


