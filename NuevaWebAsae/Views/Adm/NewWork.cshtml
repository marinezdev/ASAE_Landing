        if (!$('#BuscarDireccion').prop('checked')) {
            $('#Text_Direccion').prop('disabled', false);
            $("#DivCP").css("display", "none");

            if ($('#Text_Direccion').val().length > 0) {
                $('#Text_Direccion').css("border", "1px solid #d2d6da");
            } else {
                $('#Text_Direccion').css("border", "1px solid #e293d3");
            }

        } else {

            $("#DivCP").show();
            $('#Text_Direccion').prop('disabled', true);
            $('#Text_Direccion').css("border", "1px solid #d2d6da");
        }
    }

    function callCP(valor)
