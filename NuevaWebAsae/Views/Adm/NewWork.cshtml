                                    <label class="form-check-label" for="rememberMe">Buscar dirección  </label>
                                </div>
                            </div>
                        </div>

                        <div id="DivCP" style="display: none;">
                            <hr />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="largeInput"> Código postal  </label>
                                        <input type="text" class="form-control" id="CP" placeholder="Código postal" onchange="CPBuscar(this.value)">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="largeInput"> Estado:  </label>
                                        <div class="select2-input">
                                            <select id="Select_DEstado" name="Select_DEstado" class="form-control" style="width:100%" onchange="callEstados(this.value)">
