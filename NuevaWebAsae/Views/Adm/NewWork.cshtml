                <div class="card-body pb-0">
                    <div class="col-md-12 col-lg-12">
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label for="largeInput">* Titulo  </label>
                                    <input type="text" class="form-control form-control" id="Text_Titulo" onchange="ValidaInput('Text_Titulo')">
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label for="largeInput"> Categoria :  </label>
                                    <div class="select2-input">
                                        <select id="Select_Categoria" name="Select_Categoria" class="form-control" style="width:100%" onchange="ValidaSelect('Select_Categoria')">
                                            <option value="0">Seleccionar</option>
                                            @foreach (var item1 in ViewBag.Categorias)
                                            {
                                                <option value="@item1.Id">@item1.Nombre </option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label for="largeInput"> Tipo de vacante:  </label>
                                    <div class="select2-input">
                                        <select id="Select_TipoVacante" name="Select_TipoVacante" class="form-control" style="width:100%" onchange="ValidaSelect('Select_TipoVacante')">
                                            <option value="0">Seleccionar</option>
                                            @foreach (var item1 in ViewBag.Vacante)
                                            {
                                                <option value="@item1.Id">@item1.Nombre </option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>


                            <div class="col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label for="largeInput">* Salario (Rango inicial) </label>
                                    <input type="text" class="form-control input-number" id="Text_Sueldo" onchange="ValidaInput('Text_Sueldo')">
                                </div>
                            </div>
                            <div class="col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label for="largeInput"> Salario (Rango final)   </label>
                                    <input type="text" class="form-control input-number" id="Text_SueldoF" >
                                </div>
                            </div>
                            <div class="col-md-4 col-lg-4">
                                <div class="form-group">
                                    <label for="largeInput"> Pago:  </label>
                                    <div class="select2-input">
                                        <select id="Select_Pago" name="Select_Pago" class="form-control" style="width:100%" onchange="ValidaSelect('Select_Pago')">
                                            <option value="0">Seleccionar</option>
                                            @foreach (var item1 in ViewBag.Pago)
                                            {
                                                <option value="@item1.Id">@item1.Nombre </option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label for="largeInput">* Dirección   </label>
                                    <input type="text" class="form-control form-control" id="Text_Direccion" onchange="ValidaInput('Text_Direccion')">
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6">
                                <br />
