
@{
    ViewBag.Title = "ConsultaArticulo";
    Layout = "~/Views/Shared/_LayoutAdm.cshtml";
}

<link href="~/Assets/js/plugins/chart.js/datasc.css" rel="stylesheet" />
<style>
    table.dataTable thead th {
        border-bottom: 1px solid #111;
    }

    table.dataTable tfoot th {
        border-top: 1px solid #111;
    }

    table.dataTable.no-footer {
        border-bottom: 0px solid rgb(255 255 255 / 90%);
    }

    .btn {
        margin-bottom: 0;
        letter-spacing: -0.025rem;
        text-transform: uppercase;
        box-shadow: 0 4px 7px -1px rgb(0 0 0 / 11%), 0 2px 4px -1px rgb(0 0 0 / 7%);
        background-size: 150%;
        background-position-x: 25%;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button.current, .dataTables_wrapper .dataTables_paginate .paginate_button.current:hover {
        color: rgb(255 255 255 / 90%) !important;
        border: 0px solid #979797;
        background-color: white;
        background-image: linear-gradient( 310deg, #2152ff 0%, #21d4fd 100%);
        border-radius: 0.5rem;
    }
</style>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12 mt-4">
            <div class="card mb-4">
                <div class="card-header pb-0 p-3">
                    <h6 class="mb-1">Projects</h6>
                    <p class="text-sm">Listado de artículos registrados (No artículos relacionados a una categoría desactivada)</p>
                </div>
                <div class="card-body p-3">
                    @Html.Raw(ViewBag.Articulos)
                </div>
            </div>
        </div>
    </div>
</div>




<script src="~/Scripts/jquery.min.js"></script>

<script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {

        $('#TableList').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
            },
        });
    });

    function Editar(Id) {
        window.location.href = '@Url.Action("BlogEdit", "Adm")?Id='+Id;
    }

    function MostrarArticulo(Id) {
        window.location.href = '@Url.Action("BlogShow", "Adm")?Id='+Id;
    }

    $(document).ready(function () {
        $('#Menu_Blog').addClass(" nav-link active");
        });
</script>

